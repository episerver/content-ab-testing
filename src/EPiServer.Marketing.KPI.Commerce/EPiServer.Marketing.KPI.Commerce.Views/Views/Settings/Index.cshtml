@using EPiServer.Framework.Web.Resources
@using EPiServer.Shell.Navigation
@model EPiServer.Marketing.KPI.Commerce.ViewModels.SettingsViewModel
<!DOCTYPE html>

<html lang="en">
<head>
    <title>EPiServer Marketing AB Testing</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/EPiServer/EPiServer.Cms.UI.Admin/clientResources/favicon.ico" rel="icon" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Barlow:300,400,500" />

    @ClientResources.RenderResources("kpi-commerce", new[] { ClientResourceType.Style })

    <style>
        body {
            margin: 0;
        }

        input[type='text'] {
            border: 0 !important;
            background: none !important;
        }
    </style>
</head>
<body class="epi-workspace">
    @Html.Raw(Html.CreatePlatformNavigationMenu())
    <noscript>You need to enable JavaScript to run this app.</noscript>
    <div id="root" @Html.Raw(Html.ApplyPlatformNavigation()) style="z-index:auto;" data-module-shell-path="@EPiServer.Shell.Paths.ToResource("EPiServer.Marketing.KPI.Commerce", "")"></div>
    @ClientResources.RenderResources("kpi-commerce", new[] { ClientResourceType.Script })
</body>
</html>
